<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
    <div>
        <h2
            class="mb-4 text-3xl font-extrabold tracking-tight text-balance text-neutral-800 dark:text-neutral-200"
        >
            Benchmark
        </h2>
        <!-- Chart container để Chart.js responsive -->
        <div class="relative h-96 w-full">
            <canvas id="chart" class="h-full w-full"></canvas>
        </div>

        <!-- Chart.js từ CDN -->
        <script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <!-- Script để vẽ chart -->
        <script is:inline>
            const ctx = document.getElementById("chart");
            const chart = new Chart(ctx, {
                type: "line",
                data: {
                    labels: ["Jan", "Feb", "Mar", "Apr"],
                    datasets: [
                        {
                            label: "DCA or Die",
                            data: [10, 15, 20, 17],
                            borderColor: "rgb(75, 192, 192)",
                            tension: 0.1,
                        },
                        {
                            label: "VNINDEX",
                            data: [12, 14, 18, 16],
                            borderColor: "rgb(255, 99, 132)",
                            tension: 0.1,
                        },
                    ],
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                },
            });
            // ép chart resize khi load xong layout
            window.addEventListener("load", () => chart.resize());
            window.addEventListener("resize", () => chart.resize());
        </script>
    </div>
</section>
