---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";

---

<MainLayout lang="vi">
  <!-- <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Tìm hiểu triết lý DCA or Die"
    url="about"
  /> -->

  <HeroSection
    title=`<span class="text-yellow-500 dark:text-yellow-400">DCA or Die</span> Đầu tư dài hạn, không FOMO`
    subTitle="Xây dựng sự giàu có bền vững qua DCA, lãi kép và doanh nghiệp chất lượng."
    primaryBtn="Bắt đầu đọc blog"
    primaryBtnURL="blog"
    secondaryBtn="Về chúng tôi"
    secondaryBtnURL="about"
    withReview={false}
    src={heroImage}
    alt="Minh họa về đầu tư dài hạn"
  />

  <FeaturesGeneral
    title="Triết lý DCA or Die"
    subTitle="Đầu tư định kỳ vào doanh nghiệp chất lượng, nắm giữ dài hạn, tận dụng sức mạnh của lãi kép."
    src={featureImage}
    alt="Biểu đồ tăng trưởng dài hạn"
    features={features}
  />

  <FeaturesNavs
    title="Các trụ cột chiến lược"
    tabs={[
      {
        heading: "DCA Thông minh",
        content: "Đầu tư đều đặn bất chấp biến động ngắn hạn.",
        svg: "tools",
        src: tools,
        alt: "Minh họa DCA",
        first: true,
      },
      {
        heading: "Phân tích cơ bản",
        content: "Tập trung vào báo cáo tài chính và chất lượng doanh nghiệp.",
        svg: "dashboard",
        src: dashboard,
        alt: "Phân tích dữ liệu",
        second: true,
      },
      {
        heading: "Nắm giữ dài hạn",
        content: "Không giao dịch ngắn hạn, không FOMO, không vay margin.",
        svg: "house",
        src: construction,
        alt: "Cam kết với chiến lược",
      },
    ]}
  />

  <FAQ title="Câu hỏi thường gặp" faqs={faqs} />
</MainLayout>
